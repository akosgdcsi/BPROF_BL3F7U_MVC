@model string
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link href="/CSS/Form.css" rel="stylesheet" />
    <title>Add Star</title>
</head>
<body>
    <a class="nav-link" style="color: #FFF842" href="/Home/ListSystem">back to list</a>
    <h1>Star</h1>
    <div class="place">
        <div id="text">
            <form action="/Home/AddStar" method="post">
                <input type="hidden" name="SystemID" value="@Model" />
                <h2>Name:</h2>
                <input class="mb-3" type="text" name="name" />
                <br />
                <h2>Star Type:</h2>
                <select class="form-select-lg mb-3" type="text" name="StarType">
                    <option value="Blue_Stars">Blue Star</option>
                    <option value="Yellow_Dwarfs">Yellow Dwarf</option>
                    <option value="Orange_Dwarfs">Orange Dwarf</option>
                    <option value="Red_Dwarfs">Red_Dwarfs</option>
                    <option value="White_Dwarfs">White Dwarf</option>
                    <option value="Red_Giants">Red Giants</option>
                    <option value="Blue_Giants">Blue Giant</option>
                </select>
                <br />
                <h2> Age:</h2>
                <input class="mb-3" type="number" name="Age" />
                <br />
                <br />
                <input class="action-button" type="submit" value="Send" />
            </form>
        </div>
    </div>
</body>
</html>