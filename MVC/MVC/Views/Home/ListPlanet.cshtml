@model IEnumerable<Models.Planet>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListPlanet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/CSS/List.css" type="text/css">
</head>
<body>
<a class="nav-link" style="color: #FFF842" href="/">back to homepage</a>
<h1>Planets Listed</h1>
<table class="container">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habitable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habitable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarID)
            </td>
            <td>
                
                <a href="/Home/UpdatePlanet?id=@item.PlanetID">Update Planet</a>
                <br />
                <a href="/Home/DeletePlanet?id=@item.PlanetID">Delete</a>
                

            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
